<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold text-gray-900">Editar Registro de Asistencia</h1>
      <p class="mt-2 text-sm text-gray-700">Modifica los detalles del registro de asistencia seleccionado.</p>
    </div>
  </div>
</div>

<div class="mt-4">
  <%= form_with(model: @attendance_record, class: "space-y-8 divide-y divide-gray-200") do |f| %>
    <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
      <div class="space-y-6 sm:space-y-5">
        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
          <%= f.label :employee_id, "Empleado", class: "block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5" %>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <%= f.collection_select :employee_id, Employee.all, :id, :full_name, { prompt: "Seleccionar empleado" }, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
          <%= f.label :entry_time, "Hora de Entrada", class: "block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5" %>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <%= f.datetime_field :entry_time, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
          <%= f.label :exit_time, "Hora de Salida", class: "block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5" %>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <%= f.datetime_field :exit_time, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
          <%= f.label :device_id, "Dispositivo", class: "block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5" %>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <%= f.collection_select :device_id, Device.all, :id, :name, { prompt: "Seleccionar dispositivo" }, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
          <%= f.label :processed, "Procesado", class: "block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5" %>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <%= f.check_box :processed, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
          </div>
        </div>
      </div>
    </div>

    <div class="pt-5">
      <div class="flex justify-end gap-x-3">
        <%= link_to "Cancelar", attendance_records_path, class: "rounded-md bg-white py-2 px-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <%= f.submit "Actualizar", class: "rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    </div>
  <% end %>
</div>