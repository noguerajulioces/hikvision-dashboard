<main>
  <div class="relative isolate overflow-hidden">
    <!-- Secondary navigation -->
    <header class="pb-4 pt-6 sm:pb-6">
      <div class="mx-auto flex max-w-7xl flex-wrap items-center gap-6 px-4 sm:flex-nowrap sm:px-6 lg:px-8">
        <h1 class="text-base/7 font-semibold text-gray-900">Dashboard</h1>
        <div class="order-last flex w-full gap-x-8 text-sm/6 font-semibold sm:order-none sm:w-auto sm:border-l sm:border-gray-200 sm:pl-6 sm:text-sm/7">
          <a href="#" class="text-indigo-600">Esta semana</a>
          <a href="#" class="text-gray-700">Este mes</a>
          <a href="#" class="text-gray-700">Este año</a>
        </div>
      </div>
    </header>

    <!-- Stats -->
    <div class="border-b border-b-gray-900/10 lg:border-t lg:border-t-gray-900/5">
      <dl class="mx-auto grid max-w-7xl grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 lg:px-2 xl:px-0">
        <div class="flex flex-wrap items-baseline justify-between gap-x-4 gap-y-2 border-t border-gray-900/5 px-4 py-10 sm:px-6 lg:border-t-0 xl:px-8">
          <dt class="text-sm/6 font-medium text-gray-500">Empleados Activos</dt>
          <dd class="w-full flex-none text-3xl/10 font-medium tracking-tight text-gray-900"><%= @employees %></dd>
        </div>
        <div class="flex flex-wrap items-baseline justify-between gap-x-4 gap-y-2 border-t border-gray-900/5 px-4 py-10 sm:border-l sm:px-6 lg:border-t-0 xl:px-8">
          <dt class="text-sm/6 font-medium text-gray-500">Asistencias Hoy</dt>
          <dd class="w-full flex-none text-3xl/10 font-medium tracking-tight text-gray-900"><%= @attendance_records.count %></dd>
        </div>
        <div class="flex flex-wrap items-baseline justify-between gap-x-4 gap-y-2 border-t border-gray-900/5 px-4 py-10 sm:px-6 lg:border-l lg:border-t-0 xl:px-8">
          <dt class="text-sm/6 font-medium text-gray-500">Horas Extras Registradas</dt>
          <dd class="w-full flex-none text-3xl/10 font-medium tracking-tight text-gray-900"><%= @overtime_records.count %></dd>
        </div>
        <div class="flex flex-wrap items-baseline justify-between gap-x-4 gap-y-2 border-t border-gray-900/5 px-4 py-10 sm:border-l sm:px-6 lg:border-t-0 xl:px-8">
          <dt class="text-sm/6 font-medium text-gray-500">Incidentes Reportados</dt>
          <dd class="w-full flex-none text-3xl/10 font-medium tracking-tight text-gray-900"><%= @incidents.count %></dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="space-y-16 py-16 xl:space-y-20">
    <!-- Recent activity table -->
    <div>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-base font-semibold text-gray-900">Últimos registros</h2>
      </div>
      <div class="mt-6 overflow-hidden border-t border-gray-100">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
            <table class="w-full text-left">
              <thead class="sr-only">
                <tr>
                  <th>Empleado</th>
                  <th class="hidden sm:table-cell">Acción</th>
                  <th>Detalles</th>
                </tr>
              </thead>
              <tbody>
                <tr class="text-sm/6 text-gray-900">
                  <th scope="colgroup" colspan="3" class="relative isolate py-2 font-semibold">
                    <time datetime="2025-02-05">Hoy</time>
                  </th>
                </tr>
                <tr>
                  <td class="relative py-5 pr-6">
                    <div class="flex gap-x-6">
                      <div class="flex-auto">
                        <div class="text-sm/6 font-medium text-gray-900">Juan Pérez</div>
                        <div class="mt-1 text-xs/5 text-gray-500">Registró asistencia</div>
                      </div>
                    </div>
                  </td>
                  <td class="hidden py-5 pr-6 sm:table-cell">
                    <div class="text-sm/6 text-gray-900">Asistencia</div>
                  </td>
                  <td class="py-5 text-right">
                    <a href="#" class="text-sm/6 font-medium text-indigo-600 hover:text-indigo-500">Ver detalles</a>
                  </td>
                </tr>
                <tr>
                  <td class="relative py-5 pr-6">
                    <div class="flex gap-x-6">
                      <div class="flex-auto">
                        <div class="text-sm/6 font-medium text-gray-900">Ana López</div>
                        <div class="mt-1 text-xs/5 text-gray-500">Reportó un incidente</div>
                      </div>
                    </div>
                  </td>
                  <td class="hidden py-5 pr-6 sm:table-cell">
                    <div class="text-sm/6 text-gray-900">Incidente</div>
                  </td>
                  <td class="py-5 text-right">
                    <a href="#" class="text-sm/6 font-medium text-indigo-600 hover:text-indigo-500">Ver detalles</a>
                  </td>
                </tr>
                <tr>
                  <td class="relative py-5 pr-6">
                    <div class="flex gap-x-6">
                      <div class="flex-auto">
                        <div class="text-sm/6 font-medium text-gray-900">Carlos Ruiz</div>
                        <div class="mt-1 text-xs/5 text-gray-500">Solicitó horas extras</div>
                      </div>
                    </div>
                  </td>
                  <td class="hidden py-5 pr-6 sm:table-cell">
                    <div class="text-sm/6 text-gray-900">Horas Extras</div>
                  </td>
                  <td class="py-5 text-right">
                    <a href="#" class="text-sm/6 font-medium text-indigo-600 hover:text-indigo-500">Ver detalles</a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
